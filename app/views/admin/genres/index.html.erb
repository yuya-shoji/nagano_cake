<h1>ジャンル一覧・追加</h1>

<br>
<%= form_with model: @genre, url:"/admin/genres/", local:true do |f| %>
<label>ジャンル名</label>
<%= f.text_field :name %>
<%= f.submit'新規登録' %>
<% end %>

<table class = "table">
  <thead>
    <th>ジャンル</th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
    <td><%= genre.name %></td>
    <td><%= link_to '編集する', edit_admin_genre_path(genre) %></td>
    </tr>
    <% end %>
  </tbody>
</table>