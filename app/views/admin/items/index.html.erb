<h1>商品一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.genre %></td>
      <% if item.is_active == true %>
      <td>販売停止中</td>
      <% else %>
      <td>販売中</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
