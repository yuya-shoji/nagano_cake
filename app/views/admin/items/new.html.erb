<h1>商品新規登録</h1>
  <div class="container">
    <%= form_with model: @item, url:'/admin/items', local:true do |f| %>
      <div class="form-group row">
    <h4>商品画像</h4>
      <%= f.attachment_field :image, class:"col-6 col-offset-1" %>
      </div>
      <div class="form-group row">
    <h4>商品名</h4>
      <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group row">
    <h4>商品説明</h4>
      <%= f.text_area :introduction, class:"form-control" %>
      </div>
      <div class="form-group row">
    <h4>ジャンル</h4>
     <%= f.collection_select :genre_id, Genre.all, :id, :name, class:"form-control" %>
      </div>
      <div class="form-group row">
    <h4>税抜価格</h4>
      <%= f.text_field :price, class:"form-control" %>円
      </div>
      <div class="form-group row">
    <h4>販売ステータス</h4>
      <%= f.select :is_active,{販売中:true, 販売停止中:false}, class:"form-control" %>
      </div>
    <div class="row">
      <div class="col col-offset-4">
      </div>
        <div class="col-7">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        <% end %>
        </div>
    </div>
  </div>