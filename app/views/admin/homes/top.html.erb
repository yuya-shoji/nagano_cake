<h2>注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= link_to admin_order_path(order.id) do %> <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
      <td><%= order.name %></td>
      <td><%= order.order_details.count %></td>
    </tr>
  </tbody>
        <% end %>
  <% end %>