<h2><%= current_customer.last_name %><%= current_customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: current_customer, url:admin_customer_path(current_customer.id), local:true do |f| %>

<h4>氏名</h4>
  <%= f.text_field :last_name %> <%= f.text_field :first_name %>
<h4>フリガナ</h4>
  <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
<h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
<h4>住所</h4>
  <%= f.text_field :address %>
<h4>電話番号</h4>
  <%= f.text_field :telephone_number %>
<h4>メールアドレス</h4>
  <%= f.text_field :email %>
<h4>会員ステータス</h4>
  <%= f.radio_button :is_deleted, :false, checked: true %>
  <%= f.label :is_deleted, "有効", {value: :true, style: "display: inline-block;" } %>
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "退会", {value: :false, style: "display: inline-block;" } %>
<div>
  <%= f.submit "編集内容を保存", class:"btn btn-success" %>
</div>
<% end %>