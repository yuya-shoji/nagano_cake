<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="form-inline">
      <%= f.label :last_name, "名前         (姓)", class:"control-label col-xs-3" %>
      <div class="col-xs-3">
      <%= f.text_field :last_name, class:"form-control" %>
      </div>
      <%= f.label :first_name,  "(名)", class:"control-label col-xs-3" %>
      <%= f.text_field :first_name, class:"form-control col-xs-1" %>
    </div>

    <div class="form-inline">
      <%= f.label :last_name_kana, "フリガナ      (セイ)", class:"control-label col-xs-5" %>
      <%= f.text_field :last_name_kana, class:"form-control col-xs-2"  %>
      <%= f.label :first_name_kana, "(メイ)", class:"control-label col-xs-3" %>
      <%= f.text_field :first_name_kana, class:"form-control col-xs-2"  %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"control-label col-xs-5" %>
    </div>

    <div class="form-group">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"control-label col-xs-5" %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="form-group">
      <%= f.label :address, "住所", class:"control-label col-xs-5" %>
      <%= f.text_field :address %>
    </div>

    <div class="form-group">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", class:"control-label col-xs-5" %>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード(確認用)", class:"control-label col-xs-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= render "devise/shared/links" %>からログインください。</p>
