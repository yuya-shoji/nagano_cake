<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="col-md-5">名前</div>
          <div class="form-group form-inline">
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, class:"form-control" %>
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
    </div>
    <div class="row">
      <div class="col-md-5">フリガナ</div>
          <div class="form-group form-inline">
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, class:"form-control"  %>
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana, class:"form-control"  %>
          </div>
    </div>
    <div class="row">
      <div class="col-md-5"><%= f.label :email, "メールアドレス" %></div>
          <div class="form-group form-inline">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
    </div>
    <div class="row">
      <div class="col-md-5"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
          <div class="form-group form-inline">
            <%= f.text_field :postal_code, class:"form-control"%>
          </div>
    </div>
    <div class="row">
      <div class="col-md-5"><%= f.label :address, "住所" %></div>
          <div class="form-group form-inline">
            <%= f.text_area :address, class:"form-control" %>
          </div>
    </div>
    <div class="row">
        <div class="col-md-5"><%= f.label :telephone_number, "電話番号(ハイフンなし)"%></div>
          <div class="form-group form-inline">
            <%= f.text_field :telephone_number, class:"form-control" %>
          </div>
    </div>
    <div class="row">
        <div class="col-md-5"><%= f.label :password, "パスワード" %>(<%= @minimum_password_length %> 文字以上)</div>
          <div class="form-group form-inline">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
    </div>
    <div class="row">
      <div class="col-md-5"><%= f.label :password_confirmation, "パスワード(確認用)"%></div>
          <div class="form-group form-inline">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
    </div>
    <div class="row">
        <div class="col col-md-6">
        </div>

          <div class="actions form-group form-inline">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
      <% end %>
    </div>
    <div>
      <h2>既に登録済みの方</h2>
      <p><%= render "devise/shared/links" %>からログインください。</p>
    </div>
  </div>