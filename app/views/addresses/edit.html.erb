<h2>配送先編集</h2>
  <div class="container">
    <%= form_with model:@address, url:"/addresses/#{@address.id}", local:true do |f| %>

       <div class="field">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>

      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_area :address %>
      </div>

      <div class="field">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>

      <%= f.submit '変更内容を保存',class:"btn btn-success" %>
    <% end %>
  </div>