<div class="container my-5">
  <div class="row">
    <div class="offset-1">
    <h2 class="red-border px-3 pb-1">会員情報編集</h2>
    </div>
  </div>

        <%= form_with model: current_customer, url:customer_path(current_customer.id), local:true do |f| %>

      　<div class="container">
          <div class="row">
            <div class="col-md-5">氏名</div>
                <div class="form-group form-inline">
                  <%= f.text_field :last_name, class:"form-control" %>
                  <%= f.text_field :first_name, class:"form-control" %>
                </div>
          </div>
          <div class="row">
            <div class="col-md-5">フリガナ</div>
                <div class="form-group form-inline">
                  <%= f.text_field :last_name_kana, class:"form-control"  %>
                  <%= f.text_field :first_name_kana, class:"form-control"  %>
                </div>
          </div>
          <div class="row">
            <div class="col-md-5"><%= f.label :postal_code, "郵便番号" %></div>
                <div class="form-group form-inline">
                  <%= f.text_field :postal_code, class:"form-control"%>
                </div>
          </div>
          <div class="row">
            <div class="col-md-5"><%= f.label :address, "住所" %></div>
              <div class="form-group form-inline">
                <%= f.text_area :address, class:"form-control" %>
              </div>
          </div>
          <div class="row">
            <div class="col-md-5"><%= f.label :telephone_number, "電話番号"%></div>
              <div class="form-group form-inline">
                <%= f.text_field :telephone_number, class:"form-control" %>
              </div>
          </div>
         <div class="row">
            <div class="col-md-5"><%= f.label :email, "メールアドレス" %></div>
                <div class="form-group form-inline">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                </div>
          </div>

        <div>
          <%= f.submit "編集内容を保存", class: "btn btn-success offset-3 mt-3" %>
        </div>
        <% end %>
        <div>
        <%= link_to "退会する" , unsubscribe_customers_path(current_customer.id), class: "btn btn-danger" %>
        </div>
</div>