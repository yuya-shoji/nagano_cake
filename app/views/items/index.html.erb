<h1>商品一覧</h1><h3>(全<%= @count %>件)</h3>
<div class="container">
    <div class="row">
<% @items.each do |item| %>
        <div class="col col-sm-4">
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, size: "150x150" %>
        <p><%= item.name %></p>
        <% end %>
        <p><%= item.price %></p>
        </div>
<% end %>
    </div>
</div>
<%= paginate @items %>